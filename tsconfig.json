{
    "compilerOptions": {
      "target": "ESNext",  //latest ECMAScript target.
      "module": "ESNext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "experimentalDecorators": true,  // Added for Vue class-style component syntax support.
      "skipLibCheck": true,  // Added to true for faster compilations.
      "esModuleInterop": true,  // Added true for better CommonJS module interoperability.
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "isolatedModules": false,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "outDir": "dist",
      "declaration": true,
      "declarationDir": "dist",
      "declarationMap": true,
      "sourceMap": true,
      "paths": {
        "@/*": ["src/*"]
      },
      "lib": ["DOM", "DOM.Iterable", "ESNext"],  // Updated to include ESNext.
      "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": ["node_modules", "../node_modules"]
  }
